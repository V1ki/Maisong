<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_weight="1"
            android:id="@+id/login_logo_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/login_logo"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/input_layout"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_below="@+id/login_logo_img"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:src="@mipmap/user_name_icon"
                />
            <EditText
                android:id="@+id/ed_userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/input_tel_no"
                android:textColorHint="@color/hint_text"
                android:inputType="number"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:src="@mipmap/user_pwd_icon"
                />

            <EditText
                android:id="@+id/ed_password"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColorHint="@color/hint_text"
                android:hint="@string/input_check_code"
                />
            <TextView
                android:id="@+id/get_check_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="@drawable/text_click_selector1"
                android:text="@string/get_check_code"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/login_btn"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_selector"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="@string/login"
            android:gravity="center"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        ></LinearLayout>
</LinearLayout>