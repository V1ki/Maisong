<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/weather_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/weather_icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/main_text"
                    android:text="beijing"
                    android:padding="6dp"
                    />
                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:src="@mipmap/weather_sunny"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@+id/weather_icon_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:id="@+id/weather_text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/main_text"
                    android:textSize="11sp"
                    android:layout_gravity="right"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/temperature_text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="24/19Â°"
                    android:layout_height="0dp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/sunriseLayout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            >
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:id="@+id/sunriseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/sunrise"
                    android:text="@string/sunriseTime"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/sunset"
                    android:text="@string/sunsetTime"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/sunsetTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
