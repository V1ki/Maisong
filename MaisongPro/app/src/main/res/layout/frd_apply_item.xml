<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_click_selector1"
    android:orientation="horizontal"
    android:minHeight="90dp"
    >
   <com.yuanshi.iotpro.publiclib.view.CircleImageView
       android:id="@+id/head_icon"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:layout_gravity="center_vertical"
       android:layout_marginLeft="15dp"
       android:src="@drawable/ease_default_avatar"
       android:layout_centerVertical="true"
       app:border_width="0dp"
       app:border_color="@color/transparent"
       />

    <LinearLayout
        android:layout_toRightOf="@+id/head_icon"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/nickNameTv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/userResonTv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:textSize="14sp"
                android:ellipsize="end"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/done_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:text="@string/accepted"
                android:layout_centerVertical="true"
                android:background="@drawable/rect_btn_bg"
                android:layout_alignParentRight="true"
                />
            <RelativeLayout
                android:layout_toLeftOf="@+id/decliend_layout"
                android:id="@+id/accept_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                >
            <TextView
                android:id="@+id/accept_tv"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accept"
                android:background="@drawable/rect_btn_selector"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="14sp"
                />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/decliend_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                >
                <TextView
                    android:id="@+id/decliend_tv"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/declined"
                    android:background="@drawable/rect_btn_selector"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/subline"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>