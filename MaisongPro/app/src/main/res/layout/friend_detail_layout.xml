<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingTop="25dp"
        android:background="@color/white"
        >
        <ImageButton
            android:id="@+id/back_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@mipmap/icon_back"
            />
        <TextView
            android:id="@+id/title_text"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="@string/friend_detail"
            android:gravity="center"
            android:textColor="@color/main_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/add_friend_btn"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="@string/add_to_friend"
            android:gravity="center"
            android:textColor="@drawable/text_click_selector2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_weight="3.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
                <com.yuanshi.maisong.view.CircleImageView
                    android:id="@+id/headIcon"
                    android:layout_weight="2.5"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    app:border_color="@color/transparent"
                    app:border_width="0dp"
                    />
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/main_text"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="nicheng"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        />
                    <ImageView
                        android:layout_toRightOf="@+id/nickName"
                        android:id="@+id/sex_icon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp"
                        android:src="@mipmap/boy_checked"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/account"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="16sp"
                    android:textColor="@color/second_color"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/base_info_layout"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/second_color"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/height_of_contact"
                    />
                <TextView
                    android:id="@+id/height_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/main_text"
                    android:textSize="28sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/second_color"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="cm"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/second_color"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/weight_of_contact"
                    />
                <TextView
                    android:id="@+id/weight_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/main_text"
                    android:textSize="28sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/second_color"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="kg"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/second_color"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/sex"
                    />
                <ImageView
                    android:id="@+id/sex_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/sexTv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/second_color"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/sex_of_contact_girl"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/subline"
                />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <TextView
                    android:id="@+id/information"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="@string/information"
                    />
                <TextView
                    android:layout_toRightOf="@+id/information"
                    android:id="@+id/information_value"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/subline"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <TextView
                    android:id="@+id/department"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="@string/department"
                    />
                <TextView
                    android:layout_toRightOf="@+id/department"
                    android:id="@+id/department_value"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/subline"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <TextView
                    android:id="@+id/position"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="@string/position"
                    />
                <TextView
                    android:layout_toRightOf="@+id/position"
                    android:id="@+id/position_value"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/subline"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wechat_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/wechat"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="@string/wechat_name"
                    />
                <TextView
                    android:layout_toRightOf="@+id/wechat"
                    android:id="@+id/wechat_value"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/subline"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/email_layout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/email"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    android:text="@string/email"
                    />
                <TextView
                    android:layout_toRightOf="@+id/email"
                    android:id="@+id/email_value"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textColor="@color/main_text"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/subline"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/send_msg_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/view_click_selector2"
            android:gravity="center"
            android:text="@string/send_msg"
            />

    </LinearLayout>

</LinearLayout>